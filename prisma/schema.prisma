// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  username    String
  addresses   Address[]
  email       String       @unique
  password    String
  phone       String       @unique
  orders      Order[]
  creditCards CreditCard[]
}

model Product {
  id           Int      @id @default(autoincrement())
  name         String
  description  String
  category     Category @relation(fields: [categoryName], references: [name])
  categoryName String
  photos       String[]
  price        Decimal
  uploadDate   DateTime @default(now())
}

model Category {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  level      Int
  upperLevel String?
  image      String?
  products   Product[]
}

model Order {
  id           Int        @id @default(autoincrement())
  buyDate      DateTime   @default(now())
  sendDate     DateTime   @default(now())
  deliveryDate DateTime   @default(now())
  user         User       @relation(fields: [userId], references: [id])
  userId       Int
  creditCard   CreditCard @relation(fields: [creditCardId], references: [id])
  creditCardId Int
}

model Address {
  id          Int     @id @default(autoincrement())
  country     String
  city        String
  zipCode     String
  street      String
  houseNumber String
  isFavorite  Boolean
  user        User    @relation(fields: [userId], references: [id])
  userId      Int
}

model CreditCard {
  id         Int     @id @default(autoincrement())
  user       User    @relation(fields: [userId], references: [id])
  userId     Int
  cardNumber Int
  cvc        Int
  expiryDate String
  isFavorite Boolean
  Order      Order[]
}
